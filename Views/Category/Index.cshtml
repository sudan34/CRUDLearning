@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Category Master</h1>
<table>
    <tr>
        <td>
            <a asp-controller="Category" asp-action="Create">Create New Category</a>
        </td>
</tr>
</table>
<table style="width:550px; border:2px solid">
    <tr style="border: 2px solid">
        <td style="width:200px"><b>Category Name</b></td>
        <td style="width:200px"><b>Display Order</b></td>
        <td><b>Action</b></td>
    </tr>
    @foreach (var obj in Model)
    {
        <tr>
            <td style="width:200px">@obj.Name</td>
            <td style="width:200px">@obj.DisplayOrder</td>
            <td>
                <a asp-asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
                <a asp-asp-controller="Category" asp-action="Delete" class="text-danger" asp-route-id="@obj.Id">Delete</a>
            </td>
        </tr>
    }

</table>